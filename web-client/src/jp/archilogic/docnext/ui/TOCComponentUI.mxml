<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         xmlns:mx="library://ns.adobe.com/flex/mx" width="300" height="400">
    
    <s:DataGrid id="dataGrid" width="100%" height="100%" sortableColumns="false" selectionMode="singleRow"
                contentBackgroundColor="0x000000">
        <s:columns>
            <s:ArrayList>
                <s:GridColumn headerText="page" dataField="pageLabel" width="50">
                    <s:itemRenderer>
                        <fx:Component>
                            <s:DefaultGridItemRenderer textColor="0xFFFFFF"/>
                        </fx:Component>
                    </s:itemRenderer>
                </s:GridColumn>
                <s:GridColumn headerText="text" dataField="nameLabel">
                    <s:itemRenderer>
                        <fx:Component>
                            <s:DefaultGridItemRenderer textColor="0xFFFFFF"/>
                        </fx:Component>
                    </s:itemRenderer>
                </s:GridColumn>
            </s:ArrayList>
        </s:columns>
    </s:DataGrid>
</s:Group>